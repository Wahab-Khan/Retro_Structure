<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white_dull"
                android:layout_toLeftOf="@+id/imageView_player"
                />

            <ImageView
                android:id="@+id/imageView_player"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/linearlayout_title"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15dp"
                android:layout_toLeftOf="@+id/imageView_player"
                android:gravity="center"
                android:orientation="vertical"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/tvPlayername"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:textSize="19sp"
                    android:textStyle="" />

                <TextView
                    android:id="@+id/tvTeamName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="17sp"

                    />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="55dp">

                <LinearLayout
                    android:id="@+id/layout_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/layout_count"
                    android:orientation="vertical">

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="60dp"
                        android:background="@color/white_dull"

                        />


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_count"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="15dp"
                    android:layout_toRightOf="@+id/layout_view2"
                    android:background="@drawable/circule"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:id="@+id/tvRank"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:includeFontPadding="false"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="#766606"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="15dp"
                    android:layout_toRightOf="@+id/linearlayout_title_end"
                    android:orientation="vertical">

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="60dp"
                        android:background="@color/white_dull"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout_title_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGoal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="#766606"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tvGoalArabic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textSize="17sp" />


                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>